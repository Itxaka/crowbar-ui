h2(translate='') upgrade7.steps.database-configuration.title

uib-tabset(active='active')
  uib-tab(index='0', heading='Create a Database')
    form(novalidate, name='createDatabase')
      .form-group(ng-class="{'has-warning': createDatabase.username.$error.required}")
        .col-xs-8 
          .label-control
            label(translate='') upgrade7.steps.database-configuration.form.username
            span(translate='', ng-show='createDatabase.username.$error.required')  - invalid characters
          input.form-control(type='text', name='username', ng-required='true', ng-model='Upgrade7DatabaseVm.form.username')
      .form-group(ng-class="{'has-warning': createDatabase.password.$error.required}")
        .col-xs-8
          .label-control
            label(translate='') upgrade7.steps.database-configuration.form.password
            span(translate='', ng-show='createDatabase.password.$error.required') - invalid Password
          input.form-control(type='text', name='password', ng-required='false', ng-model='Upgrade7DatabaseVm.form.password')

      button.btn.btn-success.pull-right.btn-lg(translate='') upgrade7.steps.database-configuration.form.create-database


  uib-tab(index='1', heading='Connect to an existing Database') 
    form
      .form-group
        .col-xs-8
          .label-control
            label(translate='') upgrade7.steps.database-configuration.form.server
          input.form-control(type='text', name='server' required='', ng-model='Upgrade7DatabaseVm.form.server')
        .col-xs-2
          .label-control
            label(translate='') upgrade7.steps.database-configuration.form.port
          input.form-control(type='text', required='', ng-model='Upgrade7DatabaseVm.form.port')
      .form-group
        .col-xs-8
          .label-control
            label(translate='') upgrade7.steps.database-configuration.form.username
          input.form-control(type='text', required='', ng-model='Upgrade7DatabaseVm.form.username')
      .form-group
        .col-xs-8
          .label-control
            label(translate='') upgrade7.steps.database-configuration.form.password
          input.form-control(type='text', required='', ng-model='Upgrade7DatabaseVm.form.password')
      .form-group
        .col-xs-8
          .label-control
            label(translate='') upgrade7.steps.database-configuration.form.table-prefix
          input.form-control(type='text', required='', ng-model='Upgrade7DatabaseVm.form.table_prefix')

      button.btn.btn-success.pull-right.btn-lg(translate='') upgrade7.steps.database-configuration.form.connect-database
      