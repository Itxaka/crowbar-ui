h2(translate='') upgrade7.steps.database-configuration.title

.database-configuration
  uib-tabset(active='active')
    uib-tab(index='0', heading='Create a Database')
      form.database-form
        .form-group
          label(translate='') upgrade7.steps.database-configuration.databaseForm.username
          input.form-control(type='text', name='username', ng-required='false', ng-model='Upgrade7DatabaseVm.databaseForm.username')
        .form-group
          label(translate='') upgrade7.steps.database-configuration.databaseForm.password
          input.form-control(type='password', name='password', ng-required='false', ng-model='Upgrade7DatabaseVm.databaseForm.password')

        button.btn.btn-success.pull-right.btn-lg(translate='', ng-click="Upgrade7DatabaseVm.createNewDatabase()") upgrade7.steps.database-configuration.databaseForm.create-database

    uib-tab(index='1', heading='Connect to an existing Database') 
      form.database-form
        .form-group
          .server
            label(translate='') upgrade7.steps.database-configuration.databaseForm.server
            input.form-control(type='text', name='server' required='', ng-model='Upgrade7DatabaseVm.databaseForm.server')
          .port
            label(translate='') upgrade7.steps.database-configuration.databaseForm.port
            input.form-control(type='text', required='', ng-model='Upgrade7DatabaseVm.databaseForm.port')
        .form-group
          label(translate='') upgrade7.steps.database-configuration.databaseForm.username
          input.form-control(type='text', required='', ng-model='Upgrade7DatabaseVm.databaseForm.username')
        .form-group
          label(translate='') upgrade7.steps.database-configuration.databaseForm.password
          input.form-control(type='password', required='', ng-model='Upgrade7DatabaseVm.databaseForm.password')
        .form-group
          label(translate='') upgrade7.steps.database-configuration.databaseForm.table-prefix
          input.form-control(type='text', required='', ng-model='Upgrade7DatabaseVm.databaseForm.table_prefix')

        button.btn.btn-success.pull-right.btn-lg(translate='') upgrade7.steps.database-configuration.databaseForm.connect-database
